<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_login"
        android:text="用户登录"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:layout_marginTop="50sp"
        android:gravity="center"/>

    <EditText
        android:layout_below="@id/tv_login"
        android:layout_marginTop="50dp"
        android:id="@+id/et_login_user_name"
        android:hint="用户名"
        android:background="@drawable/et_radius2"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:maxLines="1"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_below="@id/et_login_user_name"
        android:id="@+id/et_login_user_psw"
        android:hint="密码"
        android:inputType="textPassword"
        android:background="@drawable/et_radius2"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:maxLines="1"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_cb"
        android:layout_marginTop="20dp"
        android:layout_below="@id/et_login_user_psw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cb_login_remember_psw"
            android:layout_marginTop="10sp"
            android:text="记住密码"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <CheckBox
            android:id="@+id/cb_auto_login"
            android:layout_marginTop="10sp"
            android:text="自动登录"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

    </LinearLayout>


    <TextView
        android:layout_below="@id/ll_cb"
        android:id="@+id/tv_show_msg_login"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <Button
            android:layout_below="@id/tv_show_msg_login"
            android:id="@+id/but_login"
            android:text="登录"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:textColor="@color/write"
            android:background="@drawable/but_search_bg"
            android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:clickable="true"
            android:id="@+id/tv_forget_psw"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="忘记密码 "
            android:gravity="right"
            android:layout_height="wrap_content" />

        <TextView
            android:clickable="true"
            android:id="@+id/tv_register"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="| 注 册"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>